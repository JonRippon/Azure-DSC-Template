    {
      "condition": "[equals(parameters('DisksType'),'Un-Managed')]",
      "apiVersion": "2017-05-10",
      "name": "vm2Deployment",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('RG_Name')]",
      "dependsOn": [
        "[parameters('RG_Name')]",
        "Microsoft.Resources/deployments/nicDeployment"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "apiVersion": "2016-04-30-preview",
              "type": "Microsoft.Compute/virtualMachines",
              "name": "[concat(variables('vmName'),'Un-Managed')]",
              "location": "[parameters('RG_Location')]",
              "tags": {
                "displayName": "VM Un-Managed Disks",
                "createdBy": "Marc Kean",
                "Application": "eJukebox",
                "vmType": "Un-Managed Disks"
              },
              "dependsOn": [
              ],
              "properties": {
                "hardwareProfile": {
                  "vmSize": "[variables('vmSize')]"
                },
                "osProfile": {
                  "computerName": "[variables('vmName')]",
                  "adminUsername": "[parameters('adminUsername')]",
                  "adminPassword": "[parameters('adminPassword')]",
                  "windowsConfiguration": {
                    "provisionVmAgent": "true",
                    "timeZone": "[parameters('timeZone')]"
                  },
                  "secrets": [
                    {
                      "sourceVault": {
                        "id": "[parameters('vaultResourceID')]"
                      },
                      "vaultCertificates": [
                        {
                          "certificateUrl": "[parameters('secretUrlWithVersion1')]",
                          "certificateStore": "My"
                        }
                      ]
                    }
                  ]
                },
                "storageProfile": {
                  "imageReference": {
                    "publisher": "[variables('imagePublisher')]",
                    "offer": "[variables('imageOffer')]",
                    "sku": "[parameters('windowsOSVersion')]",
                    "version": "latest"
                  },
                  "osDisk": {
                    "createOption": "FromImage",
                    "vhd": {
                      "uri": "[concat('https://', variables('storageAccountName'), '.blob.core.windows.net/', 'vhds/', variables('vmName'), uniqueString(subscription().id), '.vhd')]"
                    },
                    "name": "[variables('vmName')]",
                    "diskSizeGB": 127
                  },
                  "copy": [
                    {
                      "name": "datadisks",
                      "count": "[parameters('dataDiskCount')]",
                      "input": {
                        "diskSizeGB": "512",
                        "lun": "[copyIndex('dataDisks')]",
                        "name": "[concat(uniqueString(subscription().id), copyIndex('dataDisks'))]",
                        "vhd": {
                          "uri": "[concat('https://', variables('storageAccountName'), '.blob.core.windows.net', '/vhds/', uniqueString(subscription().id), copyIndex('dataDisks'), '.vhd')]"
                        },
                        "createOption": "Empty"
                      }
                    }
                  ]
                },
                "networkProfile": {
                  "networkInterfaces": [
                    {
                      "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
                    }
                  ]
                },
                "diagnosticsProfile": {
                  "bootDiagnostics": {
                    "enabled": true,
                    "storageUri": "[concat('https://',variables('storageAccountName'),'.blob.core.windows.net')]"
                  }
                }
              },
              "resources": [
              ]
            }
          ]
        }
      }
    }
